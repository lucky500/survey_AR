<h1>Edit Survey Title</h1>

<h1>Update <%=@survey.title() %> </h1>

<form action="/<%= @survey.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="title">Update Survey Title:</label>
  <input id="title" name="title" type="text">

  <button type="submit">Update</button>
</form>

<form action="/surveys/<%= @survey.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Survey</button>
</form>
